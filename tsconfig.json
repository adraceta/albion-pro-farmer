{
    "compilerOptions": {
        "jsx": "react",
        "module": "commonjs",
        "sourceMap": false,
        "removeComments": false,
        "noImplicitAny": false,
        "outDir": "dist",
        "suppressImplicitAnyIndexErrors": true,
        "lib": [
            "dom",
            "es6",
            "es2015",
            "es2016",
            "es2017"
        ],
        "allowJs": true,
        "checkJs": false,
        "baseUrl": "./",
        "paths": {
            "app/*": [
                "src/*"
            ],
            "assets/*": [
                "src/assets/*"
            ]
        },
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true
    },
    "include": [
        "src/",
        "**/*.ts",
        "**/*.tsx"
    ],
    "exclude": [
        "node_modules"
    ]
}